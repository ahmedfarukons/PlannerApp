<Window x:Class="StudyPlanner.Views.PdfLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ“š PDF KÃ¼tÃ¼phanem" 
        Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>
        <SolidColorBrush x:Key="HoverColor" Color="#E3F2FD"/>

        <!-- Modern Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Item -->
        <Style x:Key="CategoryItem" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="Transparent"
                                Padding="16,12"
                                Margin="0,2"
                                CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" FontSize="20" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                             FontSize="14" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="{Binding DocumentCount, StringFormat='{}{0} dÃ¶kÃ¼man'}" 
                                             FontSize="11" 
                                             Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                <Setter TargetName="border" Property="Opacity" Value="1.0"/>
                                <Setter Property="Foreground" Value="#0D47A1"/> 
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PDF Card -->
        <DataTemplate x:Key="PdfCardTemplate">
            <Border Background="{StaticResource CardColor}"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,15,15"
                    Width="280"
                    Height="180"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="#DDD" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="ðŸ¤– AI ile Analiz Et" 
                                  Command="{Binding DataContext.AnalyzePdfCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                        <MenuItem Header="ðŸ“– PDF'i AÃ§" 
                                  Command="{Binding DataContext.OpenPdfCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="ðŸ—‘ï¸ Sil" 
                                  Command="{Binding DataContext.DeletePdfCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" 
                                Command="{Binding DataContext.OpenPdfCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <StackPanel>
                    <!-- PDF Icon -->
                    <TextBlock Text="ðŸ“„" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    
                    <!-- Title -->
                    <TextBlock Text="{Binding Title}" 
                             FontSize="15" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimary}"
                             TextAlignment="Center"
                             TextTrimming="CharacterEllipsis"
                             Height="40"
                             TextWrapping="Wrap"
                             Margin="0,0,0,10"/>
                    
                    <!-- Summary -->
                    <TextBlock Text="{Binding ShortSummary}" 
                             FontSize="12" 
                             Foreground="{StaticResource TextSecondary}"
                             TextWrapping="Wrap"
                             TextTrimming="CharacterEllipsis"
                             Height="50"
                             Margin="0,0,0,10"/>
                    
                    <!-- Footer -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                 Text="{Binding DateDisplay}" 
                                 FontSize="10" 
                                 Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock Grid.Column="1"
                                 Text="{Binding FileSizeDisplay}" 
                                 FontSize="10" 
                                 Foreground="{StaticResource TextSecondary}"/>
                    </Grid>
                </StackPanel>
                
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Categories -->
        <Border Grid.Column="0" Background="{StaticResource CardColor}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“‚ Kategoriler" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,0,0,10"/>
                    <Separator/>
                </StackPanel>

                <!-- Categories List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         ItemContainerStyle="{StaticResource CategoryItem}"
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

                <!-- Add Category -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10"
                             FontSize="13"
                             Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Yeni kategori adÄ±..." 
                                                                 Foreground="#AAA" 
                                                                 Margin="10,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button Content="âž• Kategori Ekle" 
                            Command="{Binding AddCategoryCommand}"
                            Style="{StaticResource ModernButton}"
                            Background="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel - PDFs -->
        <Grid Grid.Column="1" Background="#FAFAFA" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource CardColor}" 
                    CornerRadius="12" 
                    Padding="25" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding SelectedCategory.DisplayName, FallbackValue='Kategori SeÃ§'}" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="{Binding SelectedCategory.DocumentCount, StringFormat='{}{0} dÃ¶kÃ¼man', FallbackValue='0 dÃ¶kÃ¼man'}" 
                                 FontSize="13" 
                                 Foreground="{StaticResource TextSecondary}"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="ðŸ“„ PDF Ekle" 
                                Command="{Binding AddPdfCommand}"
                                Style="{StaticResource ModernButton}"
                                Background="#4CAF50"
                                Margin="0,0,10,0"/>
                        <Button Content="ðŸ—‘ï¸ Sil" 
                                Command="{Binding DeletePdfCommand}"
                                Style="{StaticResource ModernButton}"
                                Background="#F44336"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- PDF Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SelectedDocuments}"
                            ItemTemplate="{StaticResource PdfCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding SelectedDocuments.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
                <TextBlock Text="ðŸ“š" FontSize="60" HorizontalAlignment="Center" Opacity="0.3"/>
                <TextBlock Text="Bu kategoride henÃ¼z PDF yok" 
                         FontSize="16" 
                         Foreground="{StaticResource TextSecondary}"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
                <TextBlock Text="PDF Ekle butonuna tÄ±klayarak dÃ¶kÃ¼man ekleyin" 
                         FontSize="13" 
                         Foreground="{StaticResource TextSecondary}"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="2"
                    Background="#80000000" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="â³" FontSize="50"/>
                    <TextBlock Text="Ä°ÅŸleniyor..." 
                             FontSize="16" 
                             Foreground="White"
                             Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

