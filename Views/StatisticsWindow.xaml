<Window x:Class="StudyPlanner.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ“Š Ã‡alÄ±ÅŸma Ä°statistikleri" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BarWidthConverter x:Key="BarWidthConverter" xmlns:local="clr-namespace:StudyPlanner.Helpers"/>
        
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>

        <!-- Modern Card Style -->
        <Style x:Key="StatsCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDD" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource StatsCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š Ã‡alÄ±ÅŸma Ä°statistikleri" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Son 7 gÃ¼nlÃ¼k Ã§alÄ±ÅŸma aktiviteleriniz" 
                             FontSize="14" 
                             Foreground="{StaticResource TextSecondary}"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Yenile" 
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="ðŸ“„ Export" 
                            Command="{Binding ExportCommand}"
                            Style="{StaticResource ModernButton}"
                            Background="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Study Time -->
            <Border Grid.Column="0" Style="{StaticResource StatsCard}">
                <StackPanel>
                    <TextBlock Text="â±ï¸" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalStudyHours, StringFormat='{}{0:F1} Saat'}" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="{StaticResource PrimaryColor}"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="Toplam Ã‡alÄ±ÅŸma" 
                             FontSize="13" 
                             Foreground="{StaticResource TextSecondary}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Total Plans -->
            <Border Grid.Column="1" Style="{StaticResource StatsCard}">
                <StackPanel>
                    <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPlans}" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="#FF9800"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="Toplam Plan" 
                             FontSize="13" 
                             Foreground="{StaticResource TextSecondary}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Completed Plans -->
            <Border Grid.Column="2" Style="{StaticResource StatsCard}">
                <StackPanel>
                    <TextBlock Text="âœ…" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CompletedPlans}" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="#4CAF50"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="Tamamlanan" 
                             FontSize="13" 
                             Foreground="{StaticResource TextSecondary}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Completion Rate -->
            <Border Grid.Column="3" Style="{StaticResource StatsCard}">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CompletionRate, StringFormat='{}{0:F0}%'}" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="#9C27B0"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="BaÅŸarÄ± OranÄ±" 
                             FontSize="13" 
                             Foreground="{StaticResource TextSecondary}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Weekly Bar Chart -->
            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StatsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="ðŸ“… HaftalÄ±k Ã‡alÄ±ÅŸma GrafiÄŸi" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,0,0,15"/>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding WeeklyStats}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                             Text="{Binding DayName}" 
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource TextPrimary}"/>

                                    <Grid Grid.Column="1">
                                        <Border Background="#E3F2FD" 
                                              CornerRadius="4" 
                                              Height="30"/>
                                        <Border Background="#2196F3" 
                                              CornerRadius="4" 
                                              Height="30"
                                              HorizontalAlignment="Left"
                                              Width="{Binding Hours, Converter={StaticResource BarWidthConverter}}"/>
                                    </Grid>

                                    <TextBlock Grid.Column="2" 
                                             Text="{Binding Hours, StringFormat='{}{0:F1}h'}" 
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Right"
                                             Foreground="{StaticResource TextSecondary}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Category Stats -->
            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource StatsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="ðŸ“š Kategori BazlÄ±" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CategoryStats}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F5F5F5" 
                                          CornerRadius="8" 
                                          Padding="15" 
                                          Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <TextBlock Text="{Binding CategoryName}" 
                                                         FontSize="14" 
                                                         FontWeight="SemiBold"
                                                         Foreground="{StaticResource TextPrimary}"/>
                                                <TextBlock Text="{Binding Hours, StringFormat='{}{0:F1}h'}" 
                                                         FontSize="14" 
                                                         FontWeight="Bold"
                                                         HorizontalAlignment="Right"
                                                         Foreground="{Binding Color}"/>
                                            </Grid>

                                            <Grid Grid.Row="1" Margin="0,5,0,0">
                                                <Border Background="#E0E0E0" 
                                                      CornerRadius="4" 
                                                      Height="6"/>
                                                <Border Background="{Binding Color}" 
                                                      CornerRadius="4" 
                                                      Height="6"
                                                      HorizontalAlignment="Left"
                                                      Width="{Binding CompletionRate}"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Priority Stats -->
            <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource StatsCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="ðŸŽ¯ Ã–ncelik DaÄŸÄ±lÄ±mÄ±" 
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,0,0,15"/>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding PriorityStats}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Color}" 
                                      CornerRadius="12" 
                                      Padding="20" 
                                      Margin="10"
                                      Opacity="0.9">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding PriorityName}" 
                                                 FontSize="16" 
                                                 FontWeight="SemiBold"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Hours, StringFormat='{}{0:F1} Saat'}" 
                                                 FontSize="24" 
                                                 FontWeight="Bold"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding CompletedCount, StringFormat='{}{0} TamamlandÄ±'}" 
                                                 FontSize="13" 
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â³" FontSize="50"/>
                <TextBlock Text="YÃ¼kleniyor..." 
                         FontSize="16" 
                         Foreground="White"
                         Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

