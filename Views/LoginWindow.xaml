<Window x:Class="StudyPlanner.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:StudyPlanner.Helpers"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Giriş - StudyPlanner"
        Height="560" Width="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanConverter x:Key="InverseBool"/>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,18">
            <TextBlock Text="StudyPlanner"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBlock Text="MongoDB ile giriş yapın / kayıt olun"
                       FontSize="15"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="{DynamicResource CardBrush}"
                CornerRadius="12"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl Grid.Row="0"
                            SelectedIndex="{Binding SelectedTabIndex}"
                            Background="Transparent"
                            BorderThickness="0">
                    <TabItem Header="Giriş">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="E‑posta veya Kullanıcı Adı"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding LoginIdentifier, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,14"/>

                                <TextBlock Text="Şifre"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <PasswordBox x:Name="PasswordBox"
                                             Margin="0,6,0,14"
                                             PasswordChanged="PasswordBox_OnPasswordChanged"/>

                                <CheckBox Content="Beni hatırla"
                                          IsChecked="{Binding RememberMe}"
                                          Margin="0,4,0,0"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Kayıt Ol">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Kullanıcı Adı"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding RegisterUsername, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,14"/>

                                <TextBlock Text="E‑posta"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding RegisterEmail, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,14"/>

                                <TextBlock Text="Ad Soyad"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding RegisterFullName, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,6,0,14"/>

                                <TextBlock Text="Şifre"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <PasswordBox x:Name="PasswordBoxRegister"
                                             Margin="0,6,0,14"
                                             PasswordChanged="PasswordBox_OnPasswordChanged"/>

                                <CheckBox Content="Beni hatırla"
                                          IsChecked="{Binding RememberMe}"
                                          Margin="0,4,0,0"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>

                <Border Grid.Row="1"
                        Background="{DynamicResource HoverBrush}"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,12,0,0">
                    <TextBlock Text="{Binding StatusMessage}"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Border>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
            <Button Content="Kayıt Ol"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBool}}"
                    Command="{Binding RegisterCommand}"/>
            <Button Content="Giriş Yap"
                    IsDefault="True"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBool}}"
                    Command="{Binding LoginCommand}"/>
        </StackPanel>

        <!-- Busy overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                Grid.RowSpan="3">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="52" HorizontalAlignment="Center"/>
                <TextBlock Text="İşleniyor..." Foreground="White" FontSize="16" Margin="0,12,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>


