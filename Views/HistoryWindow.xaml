        Height="780" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>
    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardColor}" CornerRadius="12" Padding="18" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Header}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="MongoDB'de kayÄ±tlÄ± PDF ve chat geÃ§miÅŸi" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="â†» Yenile" Command="{Binding RefreshCommand}" Padding="16,8" Margin="0,0,10,0"/>
                    <Button Content="ðŸ¤– Analizde AÃ§" Command="{Binding OpenInAnalyzerCommand}" Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: document list -->
            <Border Grid.Column="0" Background="{StaticResource CardColor}" CornerRadius="12" Padding="14" Margin="0,0,14,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="ðŸ“„ PDF'ler" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding Documents}"
                             SelectedItem="{Binding SelectedDocument}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="12" Margin="0,0,0,10" Background="#F5F5F5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding UploadDateUtc}" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                        <TextBlock Text="{Binding LocalFilePath}" FontSize="10" Foreground="{StaticResource TextSecondary}" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Right: summary + chat -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource CardColor}" CornerRadius="12" Padding="16" Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ SeÃ§ili DÃ¶kÃ¼man" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="{Binding SelectedMeta}" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,6,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Row="1" Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{StaticResource CardColor}" CornerRadius="12" Padding="16" Margin="0,0,14,0">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="ðŸ“ Ã–zet" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding SelectedSummary}" TextWrapping="Wrap" Foreground="{StaticResource TextPrimary}" FontSize="13"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{StaticResource CardColor}" CornerRadius="12" Padding="16">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="ðŸ”¬ Modeller/Algoritmalar" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding SelectedModels}" TextWrapping="Wrap" Foreground="{StaticResource TextPrimary}" FontSize="13"/>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="2" Background="{StaticResource CardColor}" CornerRadius="12" Padding="16">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="ðŸ’¬ Chat GeÃ§miÅŸi" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ChatMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="12" Margin="0,0,0,10" Background="#F5F5F5">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="{StaticResource TextPrimary}"/>
                                                <TextBlock Text="{Binding TimeDisplay}" FontSize="10" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right" Margin="0,6,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <!-- Loading overlay -->
                <Border Background="#80000000"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                        Grid.RowSpan="3">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="â³" FontSize="52" HorizontalAlignment="Center"/>
                        <TextBlock Text="YÃ¼kleniyor..." Foreground="White" FontSize="16" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>



