<Application x:Class="StudyPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             Startup="Application_Startup">
    <Application.Resources>
        <!-- Global Styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- DevExpress Office 2019 Colorful Teması - KALDIRILDI (Crash sebebi) -->
                <!-- <ResourceDictionary Source="pack://application:,,,/DevExpress.Xpf.Themes.Office2019Colorful.v25.1;component/Themes/Generic.xaml"/> -->

                <!-- Default Light Theme - ThemeService tarafından değiştirilebilir -->
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>
                
                <!-- Shared Styles -->
                <ResourceDictionary Source="Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Modern Color Scheme (backward compatibility) -->
            <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
            <SolidColorBrush x:Key="SecondaryColor" Color="#28A745"/>
            <SolidColorBrush x:Key="DangerColor" Color="#DC3545"/>
            <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
            <SolidColorBrush x:Key="InfoColor" Color="#17A2B8"/>
            
            <!-- Font Family -->
            <FontFamily x:Key="MainFont">Segoe UI</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>



