<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Ocean Theme Colors -->
    <Color x:Key="PrimaryColor">#0EA5E9</Color>
    <Color x:Key="SecondaryColor">#22C55E</Color>
    <Color x:Key="AccentColor">#38BDF8</Color>
    <Color x:Key="DangerColor">#EF4444</Color>
    
    <Color x:Key="BackgroundColor">#F6FBFF</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    
    <Color x:Key="TextPrimaryColor">#0F172A</Color>
    <Color x:Key="TextSecondaryColor">#475569</Color>
    <Color x:Key="TextDisabledColor">#94A3B8</Color>
    
    <Color x:Key="BorderColor">#E2E8F0</Color>
    <Color x:Key="HoverColor">#E0F2FE</Color>
    <Color x:Key="PressedColor">#BAE6FD</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}"/>
    
    <system:String x:Key="ThemeName" xmlns:system="clr-namespace:System;assembly=mscorlib">Ocean</system:String>
</ResourceDictionary>



